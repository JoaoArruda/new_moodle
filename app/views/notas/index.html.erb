<p id="notice"><%= notice %></p>

<h1>Notas</h1>

<table>
  <thead>
    <tr>
      <th>Nota</th>
      <th>Aluno</th>
      <th>Professor</th>
      <th>Disciplina</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notas.each do |nota| %>
      <tr>
        <td><%= nota.nota %></td>
        <td><%= nota.aluno %></td>
        <td><%= nota.professor %></td>
        <td><%= nota.disciplina %></td>
        <td><%= link_to 'Show', nota %></td>
        <td><%= link_to 'Edit', edit_nota_path(nota) %></td>
        <td><%= link_to 'Destroy', nota, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

